<Window x:Class="WpfClient.ManageStockPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Stock" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Manage Stock" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <DataGrid x:Name="StockDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,80,20,20"/>
        <Button Content="Update Stock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="150" Click="UpdateStock_Click"/>
    </Grid>
</Window>
