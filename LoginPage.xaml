<Window x:Class="WpfClient.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="440" Width="704">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="169,122,0,0" Height="22" Width="93" FontFamily="Montserrat" FontSize="16" />
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="301,122,0,0" Width="263" Grid.ColumnSpan="2" Height="24" />

        <TextBlock Text="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="169,204,0,0" Height="21" Width="65" FontFamily="Montserrat" FontSize="16" />
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="301,204,0,0" Width="263" Grid.ColumnSpan="2" Height="24" />

        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="301,285,0,0" Width="263" Click="LoginButton_Click" Grid.ColumnSpan="2" Height="27" FontFamily="Montserrat" FontSize="16" />
    </Grid>
</Window>
